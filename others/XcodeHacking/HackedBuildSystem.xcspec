        Properties = (

            // Deployment
            {   Name = IPHONEOS_DEPLOYMENT_TARGET;
                Type = Enumeration;
                Values = ( "4.3", "5.0", "5.1", "6.0" ); // stop hardcoding this with rdar://7444608
